<%- include("header.ejs") -%>

    <div class="container">
        <div class="box" id="heading">
            <h1 class="listTitle">
                <%= listTitle %>
            </h1>
        </div>
        <div class="box">

            <% itens.forEach(item=> { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%=item._id%>">
                        <p class="itemList">
                            <%= item.name %>
                        </p>
                        <input type="hidden" name="listName" value="<%=listTitle%>">
                    </div>
                </form>
                <% }) %>

                    <form action="/" method="post">
                        <input class="inputList" type="text" name="item" placeholder="Insira uma nova tarefa.." maxlength="45"
                            autocomplete="off">
                        <button class="plusButton" type="submit" name="list" value="<%=listTitle%>">+</button>
                    </form>
        </div>
    </div>

    <%- include("footer.ejs") -%>